                            android:includeFontPadding="false"
                            android:inputType="text"
                            android:longClickable="false"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:paddingStart="@dimen/_16sdp"
